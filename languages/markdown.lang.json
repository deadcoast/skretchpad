{
  "id": "markdown",
  "extensions": [".md", ".markdown"],
  "tokenizer": "tree-sitter-markdown",
  "config": {
    "comments": {
      "line": null,
      "block": null
    },
    "brackets": [],
    "autoClosingPairs": [
      { "open": "**", "close": "**" },
      { "open": "*", "close": "*" },
      { "open": "`", "close": "`" },
      { "open": "[", "close": "]()" }
    ]
  },
  "theme_mapping": {
    "heading": "syntax.function",
    "link": "syntax.string",
    "code": "syntax.variable",
    "emphasis": "syntax.keyword",
    "strong": "syntax.function"
  }
}
